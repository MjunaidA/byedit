<style>
  .contact {
    margin-top: 2rem;
  }
  span.red {
    color: red !important;
}
  .form-group {
    margin-bottom: 20px;
  }
  select#inquiry option {
    color: black;
}
.form-group select {
    color: rgba(0,0,0,0.3);
}
.form-group.col-2 input::placeholder {
  color: rgba(0,0,0,0.3) !important;
  font-size: 12px;
}

  .form-group label {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
    font-size: 12px;
    {% comment %} font-family: 'Sequel Sans Roman Disp'; {% endcomment %}
    font-style: normal;
    font-weight: 310;
    font-size: 14px;
    line-height: 22px;
    color: rgb(0 0 0);
    position: relative;
  }
  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 10px;
    margin-bottom: 10px;
    box-sizing: border-box;
    border: 1px solid rgba(0, 0, 0, 0.1);
  }

  .form-group textarea {
    height: 120px;
  }

  .form-group input[type="submit"] {
    cursor: pointer;
    color: white;
    border: none;
    padding: 10px 20px;
    float: right;
    width: 20%;
    text-transform: uppercase;
  }

  .form-group.col-2 {
    display: flex;
    justify-content: flex-start;
    flex-direction: column;
    width: calc(50% - 5px);
  }

  .form-group.col-2 input,
  .form-group.col-2 select {
    width: calc(100% - 5px);
  }
  .mainNameDiv {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .wrapperContact {
    padding-bottom: 8rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }


  .order-inquireies {
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    padding-bottom: 4rem;
  }
  .inquiryHeading {
    font-family: 'Sequel Sans Black Disp' !important;
    font-style: normal;
    font-weight: 435;
    font-size: 20px;
    line-height: 30px;
    text-transform: uppercase;
    color: #000000;
  }
  .order-inquireies p {
    color: rgba(0,0,0,0.5);
    font-size: 13px;
    font-family: 'Sequel Sans';
}
a.contactPhoneBtn p {
  color: white;
}
  .inquiryPara {
    font-family: 'Sequel Sans';
    font-style: normal;
    font-weight: 310;
    font-size: 12px;
    line-height: 20px;
    color: rgba(0, 0, 0, 0.5);
  }
  .timingHeading {
    font-family: 'Sequel Sans Heavy Disp' !important;
    font-style: normal;
    font-weight: 425;
    font-size: 14px;
    line-height: 5px;
    text-transform: uppercase;
    color: #000000;
    margin-top: 4rem;
  }
  .timing {
    display: flex;
    align-items: center;
    margin-bottom: 5px;
  }
  .day {
    font-family: 'Sequel Sans';
    font-style: normal;
    font-weight: 610;
    font-size: 14px;
    line-height: 22px;
    color: rgba(0, 0, 0, 0.7);
    margin: 0;
    padding: 0;
  }
  .time {
    font-family: 'Sequel Sans';
    font-style: normal;
    font-weight: 310;
    font-size: 14px;
    line-height: 22px;
    color: rgba(0, 0, 0, 0.7);
    margin: 0;
    padding: 0;
  }
  .wrapperContact input::placeholder {
    color: rgba(0,0,0,0.3) !important;
    font-size: 12px;
  }
  .form-group textarea::placeholder {
    color: rgba(0,0,0,0.3);
    letter-spacing: 0;
    font-size: 12px;
}
#ContactForm .form-group #message {
  font-family: Arial;
}
  .contactPhoneBtn {
    all: unset;
    width: 22%;
    background: black;
    display: flex;
    align-items: center;
    gap: 20px;
    color: white;
    padding: 0 20px;
    width: 200px;
    height: 50px;
    margin-top: 4rem;
    cursor: pointer;
  }
  .contactLocations {
    padding-bottom: 8rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }

  .locationRow {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    flex-wrap: wrap;
  }
  .columnLocation {
    width: 30%;
    margin: 0 10px 15px;
    border: 1px solid rgba(0, 0, 0, 0.05);
    height: 130px;
    max-height: 126px;
    padding: 10px 15px;
  }
  .locCity {
    font-family: 'Sequel Sans Heavy Disp';
    font-style: normal;
    font-weight: 600;
    font-size: 14px;
    line-height: 22px;
    text-transform: uppercase;
    color: rgba(0, 0, 0, 0.7);
    margin: 0;
    padding: 0;
  }
  .locContent {
    font-family: 'Sequel Sans';
    font-style: normal;
    font-weight: 400;
    font-size: 13px;
    line-height: 22px;
    color: rgba(0, 0, 0, 0.5);
    margin: 0;
    padding: 0;
  }
  @media(max-width: 768px) {
    .form-group.col-2 {
      flex-wrap: wrap;
    }
    .columnLocation {
      width: 47%;
    }
    .columnLocation {
      width: 47%;
      margin: 0 10px 10px 0;
      border: 1px solid rgba(0, 0, 0, 0.05);
      height: 140px;
      max-height: 140px;
      padding: 10px 15px;
    }
    .form-group.col-2 input,
    .form-group.col-2 select {
      width: 100%;
    }
  }
