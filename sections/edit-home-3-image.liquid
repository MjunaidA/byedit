
 <!-- Link Swiper's CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

<!-- Swiper JS -->
  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<style>
  @media screen and (min-width: 750px){
  .threeColumnFlexBox {
    display: flex;
    justify-content: space-between;
    gap: 14px;
    width: 100%;
    max-width: 88%;
    margin: 0 auto;
}

.columnThreeColumn {
  flex: 1;
  padding: 20px 30px 20px 30px;
  text-align: left;
  display: flex;
  width: 100%;
  max-width:100%;
  flex-direction: column;
  justify-content: center;
}

.cstm-column-btn a {
  text-decoration: none;
}

.columnThreeColumn a {
  text-decoration: none;
}

.columnThreeColumn a:hover {
  opacity: 0.8; /* Optional: adds a hover effect */
}
    {% for block in section.blocks %}
  .columnCstmHeading{{ forloop.index }}{
    font-size:20px;
    line-height:30px;
    font-weight:400;
    margin-top: 0;
    color:{{block.settings.heading_color}}
  }
  .column{{ forloop.index }}{
    background:{{block.settings.background_color}}
  }
  .cstmBtnBorder{{ forloop.index }}{
    display: inline-flex;
    justify-content: center;
    align-items: center;
    border: 0;
    padding: 0 2rem;
    cursor: pointer;
    font: inherit;
    font-size: 1.1rem;
    text-decoration: none;
    color: {{block.settings.btntext_color}};
    background-color: {{ block.settings.btnbackground_color}};
    letter-spacing: .18rem;
    line-height: 1;
    border-radius: 2px;
    min-width: 110px;
    height: 35px;
    border: 1px solid {{block.settings.btnborder_color}};
    font-family: Sequel Sans Medium Disp;
  }
  
  {% endfor %}
  .threeColumnWrapper{{ section.id }}{
    padding-top:{{section.settings.padding-top}}px;
    padding-bottom:{{section.settings.padding-bottom}}px;
  }
  }
  @media only screen and (max-width: 750px){
  .threeColumnFlexBox {
    display: flex;
    justify-content: space-between;
    gap: 14px;
    width: 100%;
    max-width: 100%;
    padding-left: 20px;
    padding-right: 20px;
    overflow-x:scroll;
    scrollbar-width: none;
    margin: 0 auto;
}

.columnThreeColumn {
  flex: none;
  padding: 20px 30px 20px 30px;
  text-align: left;
  display: flex;
  width: 100%;
  max-width: 80%;
  flex-direction: column;
  justify-content: center;
  align-items: left;
}

.cstm-column-btn a {
  text-decoration: none;
}

.columnThreeColumn a {
  text-decoration: none;
}

.columnThreeColumn a:hover {
  opacity: 0.8; /* Optional: adds a hover effect */
}
    {% for block in section.blocks %}
  .columnCstmHeading{{ forloop.index }}{
    font-size:16px;
    line-height:22px;
    margin-top: 0;
    font-weight:400;
    font-family: Sequel Sans;
    color:{{block.settings.heading_color}}
  }
  .column{{ forloop.index }}{
    background:{{block.settings.background_color}}
  }
  .cstmBtnBorder{{ forloop.index }}{
    display: inline-flex;
    justify-content: center;
    align-items: center;
    border: 0;
    padding: 0 2rem;
    cursor: pointer;
    font: inherit;
    font-size: 1.1rem;
    text-decoration: none;
    color: {{block.settings.btntext_color}};
    background-color: {{ block.settings.btnbackground_color}};
    letter-spacing: .18rem;
    line-height: 1;
    border-radius: 2px;
    min-width: 110px;
    height: 35px;
    border: 1px solid {{block.settings.btnborder_color}};
    font-family: Sequel Sans Medium Disp;
  }
  
  {% endfor %}
  .threeColumnWrapper{{ section.id }}{
    padding-top:{{section.settings.mobile_padding-top}}px;
    padding-bottom:{{section.settings.mobile_padding-bottom}}px;
  }
  }
</style>
<div class="threeColumnWrapper{{ section.id }} " id="threeColumnWrapper">
  <div class="threeColumnFlexBox">
    {% for block in section.blocks %}
    <div class="columnThreeColumn column{{ forloop.index }}" promo-banner data-promo-id="" data-promo-name="" data-creative-name="" data-creative-id="">
      <a href="{{ block.settings.link }}">
        {% if block.settings.image_desktop %}
          <img class="imgDesk desktop_only" src="{{ block.settings.image_desktop | img_url: 'master' }}" alt="editHome" loading="lazy" width="{{ block.settings.image_desktop.width }}" height="{{ block.settings.image_desktop.height }}" />
        {% endif %}
        {% if block.settings.image_mobile %}
          <img class="imgMob mobile_only" src="{{ block.settings.image_mobile | img_url: 'master' }}" alt="editHome" loading="lazy" width="{{ block.settings.image_mobile.width }}" height="{{ block.settings.image_mobile.height }}" />
        {% endif %}
      </a>
      {% if block.settings.heading%}
        <div class="columnThreeTeatbox">
          {% if block.settings.heading %}
            <h2 class="columnCstmHeading{{ forloop.index }}">{{ block.settings.heading }}</h2>
          {% endif %}
          {% comment %}
          {% if block.settings.subheading %}
            <p class="columnCstmSubheading">{{ block.settings.subheading }}</p>
          {% endif %}
        {% endcomment %}
          {% if block.settings.btnTxt %}
            <div class="cstm-column-btn banner__buttons">
              <a href="{{ block.settings.link }}" class="cstmBtnBorder{{ forloop.index }}">{{ block.settings.btnTxt }}</a>
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
    {% endfor %}
  </div>
  </div>

{% schema %}
{
  "name": "Three Column Promo",
   "settings": [
     {
          "type": "header",
          "content": "Desktop Padding"
        },
      {
      "type": "range",
      "id": "padding-top",
      "min": 1,
      "max": 100,
      "step": 1,
      "label": "padding top",
      "unit": "px",
      "default": 50
         
    },
       {
      "type": "range",
      "id": "padding-bottom",
      "min": 1,
      "max": 100,
      "step": 1,
      "label": "padding bottom",
      "unit": "px",
      "default": 50
    },
     {
          "type": "header",
          "content": "Mobile Padding"
        },
      {
      "type": "range",
      "id": "mobile_padding-top",
      "min": 1,
      "max": 100,
      "step": 1,
      "label": "padding top",
      "unit": "px",
      "default": 25
         
    },
       {
      "type": "range",
      "id": "mobile_padding-bottom",
      "min": 1,
      "max": 100,
      "step": 1,
      "label": "padding bottom",
      "unit": "px",
      "default": 25
    },
   ],
  "blocks": [
    
    {
      "type": "column",
      "name": "Column",
      "limit": 3,
      "settings": [
        
        {
          "type": "header",
          "content": "Color"
        },
        {
          "type": "color",
          "id": "background_color",
          "label": "Section Color"
        },
        {
          "type": "color",
          "id": "heading_color",
          "label": "Heading color"
        },
        {
          "type": "color",
          "id": "btnbackground_color",
          "label": "Button Background"
        },
         {
          "type": "color",
          "id": "btntext_color",
           "default":"#000",
          "label": "Change Button Text Color"
        },
        {
          "type": "color",
          "id": "btnborder_color",
          "label": "Change Button border Color"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "image_picker",
          "id": "image_desktop",
          "label": "Desktop Image"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Mobile Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "btnTxt",
          "label": "Button Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Three Column Promo",
      "category": "Theme"
    }
  ]
}
{% endschema %}
