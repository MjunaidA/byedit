    }

 .gift-product-grid {
    /* display: grid;
    grid-template-columns: repeat(2, 2fr); */
    padding: 30px 0px 0 0px;
    /* display: flex;
    flex-wrap: wrap; */
}
    .gift-heading-description-wrapper {
    margin-bottom: 40px;
}

    .product-item {
    padding: 8px 8px 0px 8px;
    width: 43%;
    max-width: 50%;
}

    .mobile-gift-img,
    .mobile-gift-video,
    .mobile-background-wrapper,
