    }
    .swiper-wrapper {
    flex-wrap: wrap;
    justify-content: center;
    padding: 0;
    margin:0;
}
     .gift-description{
      line-height:22px;
      font-size:14px;
      font-weight:300;
       color:rgba(0, 0, 0, 0.7);
    }
    .gift-fallback-svg {
    width: 50%;
    height: auto;
}
  }

  @media screen and (max-width: 750px) {

    .padding-{{ section.id }} {
      padding-top: {{ section.settings.mobile-padding-top }}px;
      padding-bottom: {{ section.settings.mobile-padding-bottom }}px;
    }
    .gift-product-grid  {
