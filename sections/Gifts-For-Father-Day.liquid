    }

    .product-item {
      padding: 4px;
      width: 100% !important;
      max-width:47.6% !important;
}
    .gift-heading-description-wrapper{
    width: 100%;
    max-width: 90%;
    margin: 0 auto;
}
    .mobile-gift-img {
    width: 100%;
    max-width: 91%;
    margin: 0 auto;
}

.mobile-gift-wrapper {
    width: 100%;
    max-width: 90%;
    margin: 0 auto;
}

    .gift-img,
    .desktop-gift-video,
    .gift-desktop-slider,
    .gift-description,
    .gift-fallback-svg{
      display: none;
    }

    .mobile-gift-img,
    .mobile-gift-video,
    .mobile-background-wrapper,
    .mobile-gift-description{
      display: block;
    }
    .gift-product-grid.swiper.swiper-container.swiper-initialized.swiper-horizontal.swiper-backface-hidden div:empty {
      display: block;
}
    .swiper-wrapper {
      padding:0;
      margin:1em 0 0 ;
    }
    .gift-heading h2 {
    font-size: 24px;
    line-height: 32px;
    font-weight: 700;
    font-family: 'SharpGrotesk';
    margin: 0;
}
.mobile-background-wrapper{
  background: {{ section.settings.gift-background-color }};
}
    .mobile-gift-description{
      line-height:20px;
      font-size:12px;
      font-weight:300;
      color:rgba(0, 0, 0, 0.7);
      margin-bottom: 1.5em;
    }
