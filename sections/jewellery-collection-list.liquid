    </div>
         {% if section.settings.show_navigation == true %}
        <div class="swiper-button-next list--next list--next-{{ section.id }} swiper-nav "></div>
        <div class="swiper-button-prev list--prev list--prev-{{ section.id }} swiper-nav"></div>
        {% endif %}
</div>


<script>
    var collectionSlider = new Swiper(".collection-{{ section.id }}-slider", {
      slidesPerView: 5.2,
      spaceBetween: 28,
      {% if section.settings.show_navigation == true %}
      navigation: {
        nextEl: ".list--next-{{ section.id }}",
        prevEl: ".list--prev-{{ section.id }}",
      },
      {% endif %}
      breakpoints: {
        200: {
          slidesPerView: 2.3,
          spaceBetween: 15,
        },
        768: {
          slidesPerView: 3.8,
          spaceBetween: 15,
        },
         992: {
          slidesPerView: 4.2,
          spaceBetween: 28,
        },
        1024: {
            slidesPerView: 4.2,
            spaceBetween: 28,
        },
        1200: {
            slidesPerView: 5.2,
            spaceBetween: 28,
        }
      },
    });

</script>


