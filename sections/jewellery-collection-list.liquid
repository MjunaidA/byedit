<style>
    .collection__container{
        width:100%;
        height:auto;
        position: relative;
    }
   .collection__container .list-swiper {
        width: 100%!important;
        height: auto!important;
        padding-left:7rem;
      }
  
     .collection__container .list-swiper-slide {
        display: flex;
        align-items: center;
        width:100%;
      }
  
     .collection__container .list-swiper-slide img {
        display: block;
        width: 100%;
        height: auto;
        object-fit: cover;
      }
      .collection__container .swiper-button-prev, .collection__container .swiper-button-next{
        display:block!important;
        --swiper-navigation-color:#00000080;
      }
      .collection__container .swiper-button-next:after, .collection__container .swiper-button-prev:after {
          width: 30px;
          height: 30px;
          font-size: 14px;
          border: 1px solid #000;
          display: flex;
          align-items: center;
          justify-content: center;
          border-radius: 50%;
          color: #000;
      }
       .collection__container .swiper-button-next{
          right: 5%;
          top: 19%;
      }
      .collection__container .swiper-button-prev{
         left: auto;
         right: 9%;
         top: 19%;
     }
      .list-swiper .swiper-button-next:after, .list-swiper .swiper-button-prev:after{
        font-size: 15px!important;
        color: black;
      }
      .list-swiper .swiper-button-prev{
        left:3rem;
      }
      .col-List-{{ section.id }} .collection-list-heading{
        color:{{ section.settings.listHeadingColor }};
      }
      .collection-name{
        font-weight: 400;
        font-size: 13px;
        line-height: 22px;
        letter-spacing: 0.28px;
        margin: 0.7rem 0 0 0;
        text-transform:uppercase;
      }
      .col-List-{{ section.id }} .list-swiper-slide a{
        text-decoration:none;
        color:{{ section.settings.listTitleColor}};
      }
      .collection-list-heading{
        font-size: 30px;
        font-weight: 700;
        margin: 1rem 7rem 1rem 7rem;
        text-transform:uppercase;
      }
     .collection-list-description p{
        margin: 0rem 7rem 3rem 7rem;
        font-size: 14px;
        font-weight: 310;
        line-height: 22px;
     }
     .col-List-{{ section.id }} .list-swiper-text{
       height: 118px;
       background:{{section.settings.slidebg}};
       border:{{section.settings.slideborder}};
       border: 1px solid #0000001A;
     }
     .slide-info{
       padding-left:2rem;
     }
     .col-List-{{ section.id }} .slide-info h3{
       color:{{ section.settings.listHeadingColor }};
       text-transform:uppercase;
       margin:0;
     }
     .slide-info button{
       font-weight: 600;
       line-height: 25px;
       height: 3rem;
       text-transform: uppercase;
       font-family: 'Sequel Sans Light Disp' !important;
       letter-spacing: 2px;
       cursor: pointer;
       padding: 0rem 1rem;
     }
     .collection-text, collection-button{
        margin-bottom: 1rem!important;
     }
      .col-List-{{ section.id }} .slide-info button{
        background:{{section.settings.buttonbg}};
        border:1px solid {{section.settings.buttonborder}};
     }
      @media screen and (min-width:750px){
          .col-List-{{ section.id }}{
              padding-top:{{ section.settings.colPaddingTop }}%;
              padding-bottom:{{ section.settings.colPaddingBottom }}%;
              max-width:100%;
          }
           .slide-info h3{
             font-size:20px;
          }
           .slide-info button{
              font-size: 14px;
           }
      }
      @media screen and (max-width:749px){
         .col-List-{{ section.id }}{
              padding-top:{{ section.settings.colPaddingTopmb }}%;
              padding-bottom:{{ section.settings.colPaddingBottommb }}%;
              max-width:100%;
              background:{{section.settings.mbbg}}
          }
         .collection__container .swiper-horizontal>.swiper-pagination-progressbar, .swiper-pagination-progressbar.swiper-pagination-horizontal{
            display:block;
          }
          .collection-list-heading{
            margin: 0 0rem 1.5rem 1.6rem;
            font-size: 24px;
            line-height: 21px;
            letter-spacing: 0.2px;
           }
          .collection__container .swiper-nav{
            opacity:0 !important;
          }
           .collection-list-description p{
             margin:0 0rem 1.5rem 1.6rem
           }
          .collection__container .list-swiper{
            padding-left:2rem;
          }
          .collection-name{
             letter-spacing: 3px;
          }
          .slide-info h3{
            font-size:14px;
          }
          .slide-info button{
            font-size: 12px;
            letter-spacing: 1px;
          }
      }
</style>

