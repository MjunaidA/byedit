        .brand-featured-collection-middle .collection {
    display: block;
}
.brand-featured-collection-middle .collection .collection__title {
    flex: 0 0 35%;
    padding: 0;
    width: 100%;
}
.brand-featured-collection-middle slider-component.slider-mobile-gutter.slider-component-desktop {
    width: 100%;
}
.brand-featured-collection-middle .slider.slider--desktop.contains-card--standard .slider__slide:not(.collection-list__item--no-media) {
    width: calc(50% - var(--grid-desktop-horizontal-spacing) - 1.3rem);
}
.brand-featured-collection-middle .slider-buttons {
    position: unset;
}
.brand-featured-collection-middle slider-component{
    width: 100%;
  }
  }
  @media(max-width: 750px){
    .brand-featured-collection .bestSellersSection{
      padding: 25px 0;
      margin: 0;
    }
    .brand-featured-collection .bestsellerFlex{
