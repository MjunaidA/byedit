    background: rgba(255, 255, 255, 0.3);
  }
  .brand-featured-collection-middle .collection{
    display: flex;
    position: relative;
    overflow: hidden;
  }
  .brand-featured-collection-middle .collection .collection__title{
    flex: 0 0 35%;
        padding: 6rem 10rem 0 4rem;
  }
  .brand-featured-collection-middle slider-component{
    flex: 0 0 65%;
    width: 65%;
    position: initial;
  }
  .brand-featured-collection-middle slider-component .bestsellerFlex{
    position: absolute;
    left:0;
    bottom: 0;
  }
  {% if collection.handle != 'adidas' and collection.handle != 'addidas' %}
.collection__title .collection__description{
  color: black !important;
}
  .collection__title .title{
      color: black !important;
  }
  {% endif %}
   .brand-featured-collection-middle .addidas-collection-main .gradient{
     background:white;
   }
     .brand-featured-collection-middle .addidas-collection-main .adidas{
       background: #1E70B9 !important;
   }
         .brand-featured-collection-middle .addidas-collection-main .addidas{
