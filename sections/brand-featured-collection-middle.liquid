}
.brand-featured-collection-middle .slider.slider--desktop.contains-card--standard .slider__slide:not(.collection-list__item--no-media) {
    width: 50%;
}
.brand-featured-collection-middle .bestSellersWrapper {
    width: 93%;
}
.brand-featured-collection-middle .bestSellersSection {
    padding: 35px 0 0;
    margin-top: 0;
}
.brand-featured-collection-middle .slider-buttons {
    position: absolute;
    bottom: 6rem;
    left: 4rem;
}


  .brand-featured-collection .title{
    text-transform: uppercase;
  }
  .brand-featured-collection .slider--desktop .slider__slide:first-child{
    margin-left: 0rem;
    scroll-margin-left: 0rem;
  }
