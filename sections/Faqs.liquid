<script src="{{ 'pageTemplate.js' | asset_url }}" defer="defer"></script>
<script>
  // faqs
  let questionWrapper = document.querySelectorAll('.faq-title-wrapper');
  for (let i = 0; i < questionWrapper.length; i++) {
    let initialActive = questionWrapper[0].closest('.faq-box');
    initialActive.classList.add('active')
    questionWrapper[i].onclick = function() {
      let closestBox = questionWrapper[i].closest('.faq-box');

// Remove 'active' class from all other '.faq-box' elements
      let allBoxes = document.querySelectorAll('.faq-box');
      for (let j = 0; j < allBoxes.length; j++) {
        if (allBoxes[j] !== closestBox) {
          allBoxes[j].classList.remove('active');
        }
      }
      closestBox.classList.toggle('active');


    }
  }
</script>

