<style>
  /*faqs*/
  .faq-title-wrapper p {
    font-family: 'Sequel Sans';
    font-style: normal;
    font-weight: 410;
    font-size: 16px;
    line-height: 25px;
    color: black;

  }

  .faq-box .faq-desc {
    font-family: 'Sequel Sans';
    font-style: normal;
    font-weight: 310;
    font-size: 14px;
    line-height: 22px;
    color: rgba(0, 0, 0, 0.5);
    display: none;
    border-bottom: none;
    padding-bottom: 20px;
  }
  .faq-box.active .faq-desc {
    display: block;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }

  .faq-box.active .toggle-btn svg {
    rotate: 180deg;
  }
  .faq-box.active .faq-title-wrapper {
    border-bottom: none;
  }
  .faq-box .faq-title-wrapper {
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }

  @media(max-width:767px) {

    /*faqs*/
    .faq-title-wrapper p {
      width: 90%;
    }

  }
</style>

